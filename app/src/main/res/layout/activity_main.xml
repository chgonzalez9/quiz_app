<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tittle" />

        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:inputType="textCapWords"
            android:hint="@string/name_text"
            android:autofillHints="" />

        <TextView
            style="@style/questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question1" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/answer1_1"
                style="@style/answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer1_1" />

            <RadioButton
                android:id="@+id/answer1_2"
                style="@style/answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer1_2" />

            <RadioButton
                android:id="@+id/answer1_3"
                style="@style/answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer1_3" />

        </RadioGroup>

        <TextView
            style="@style/questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question2" />

        <CheckBox
            android:id="@+id/answer2_1"
            style="@style/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer2_1" />

        <CheckBox
            android:id="@+id/answer2_2"
            style="@style/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer2_2" />

        <CheckBox
            android:id="@+id/answer2_3"
            style="@style/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer2_3" />

        <CheckBox
            android:id="@+id/answer2_4"
            style="@style/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer2_4" />

        <TextView
            style="@style/questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question3" />

        <CheckBox
            android:id="@+id/answer3_1"
            style="@style/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer3_1" />

        <CheckBox
            android:id="@+id/answer3_2"
            style="@style/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer3_2" />

        <CheckBox
            android:id="@+id/answer3_3"
            style="@style/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer3_3" />

        <CheckBox
            android:id="@+id/answer3_4"
            style="@style/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer3_4" />

        <CheckBox
            android:id="@+id/answer3_5"
            style="@style/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer3_5" />

        <TextView
            style="@style/questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question4" />

        <EditText
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/answerDigits"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:autofillHints=""
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test" />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"
           android:layout_marginBottom="24dp">

           <Button
               style="@style/button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:text="@string/send_button"
               android:onClick="resultButton" />

           <Button
               style="@style/button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:text="@string/reset_button"
               android:onClick="resetButton" />

       </RelativeLayout>

    </LinearLayout>

</ScrollView>